{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "baseUrl": "./",
        "moduleResolution": "node",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./src/*"],
            "assets/*": ["./src/assets/*"],
            "comps/*": ["./src/components/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "temp"
    ]
}
